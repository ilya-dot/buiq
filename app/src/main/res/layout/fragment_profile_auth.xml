<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.bf_kotlin_client.viewmodels.ProfileAuthViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/background_color"
        android:backgroundTint="@color/background_color"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Вход"
            android:textAlignment="center"
            android:textColor="@color/text_or_icon_color"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_shape"
            android:backgroundTint="@color/main_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Логин"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_or_icon_color"
                    android:text="@={viewModel.login}"/>

                <EditText
                    android:id="@+id/editTextNomber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Пароль"
                    android:text="@={viewModel.password}"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_or_icon_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_or_icon_color"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Войти"
                    android:onClick="@{_->viewModel.auth()}"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_or_icon_color"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Зарегестрироваться"
                    android:onClick="@{_->viewModel.openRegistration()}"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>


</layout>